{% extends 'share-base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('renderer/gallery') }}
{% endblock %}

{% block title %}Project: {{ project.name }}{% endblock %}

{% block body %}
    <div
            id="viewer"
            style="width: 100vw;height: 100vh;"
            data-items="{{ items|json_encode|escape('html_attr') }}"
            data-caption="{{ project.name }}"
            data-panorama="{{ items.0.panorama }}"
    >

    </div>

{% endblock %}
